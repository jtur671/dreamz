{
  "expo": {
    "name": "Dreamz",
    "slug": "dreamz",
    "scheme": "dreamz",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dreamz.app",
      "usesAppleSignIn": true,
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Dreamz uses your microphone to record dreams by voice."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.dreamz.app",
      "permissions": ["RECORD_AUDIO"],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-web-browser",
      "expo-audio"
    ]
  }
}
